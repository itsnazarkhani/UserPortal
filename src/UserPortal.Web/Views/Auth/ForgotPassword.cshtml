@model ForgotPasswordDto

<main id="forgot-page">
    <main class="auth-form-container" id="forgot-container">
        <header>Forgot Password</header>

        <form method="post" id="forgot-form" action="/Auth/ForgotPassword">
            <div>
                <input type="email" class="text-input" id="Email" name="Email" placeholder="Enter your registered email" required />
            </div>

            <button type="submit" id="submit">Send Reset Link</button>

            <div class="auth-links">
                <a href="/Auth/Login">← Back to Login</a>
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="auth-message">@ViewBag.Message</div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="auth-error">@ViewBag.Error</div>
            }
        </form>
    </main>
</main>
