<main id="login-page">
    <main class="auth-form-container" id="login-container">
        <header>Login</header>
        <form action="post" id="login-form">
            <div>
                <input type="text" class="text-input" id="username" name="username" placeholder="Username" required />
            </div>
            <div>
                <input type="password" class="text-input" id="password" name="password" placeholder="Password"
                    required />
            </div>
            <label class="checkbox-container">
                <input type="checkbox" id="remember-me" name="remember-me" value="true" />
                <span class="checkmark"></span>
                Remember me?
            </label>
            <button type="submit" id="submit">Login</button>
            <div class="auth-links">
                <a href="/Auth/ForgotPassword">Forgot Password?</a>
                <a href="/Auth/Register">Create an Account→</a>
        </form>
    </main>
</main>