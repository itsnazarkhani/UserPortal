@using Microsoft.AspNetCore.Routing.Constraints
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        @(
                ViewData["Title"] == null
                ? "UserPortal"
                : ViewData["Title"] + " - UserPortal"
                )
    </title>

    @* import fonts *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Prosto+One&display=swap"
        rel="stylesheet">

    @* Reference CSS files *@

    @* Essential CSS *@
    <link rel="stylesheet" href="~/css/base/root.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base/main.css" asp-append-version="true" />

    @* Utility CSS files *@
    <link rel="stylesheet" href="~/css/utilities/colors.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/utilities/fonts.css" asp-append-version="true" />

    @* Component CSS files *@
    <link rel="stylesheet" href="~/css/components/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/authContainer.css" asp-append-version="true" />

    @* Page-specific CSS files *@
    <link rel="stylesheet" href="~/css/pages/home.css">
    <link rel="stylesheet" href="~/css/pages/login.css">
    <link rel="stylesheet" href="~/css/pages/register.css">
    <link rel="stylesheet" href="~/css/pages/logout.css">
    <link rel="stylesheet" href="~/css/pages/profile.css">
    <link rel="stylesheet" href="~/css/pages/settings.css">


    @* Section for page-specific CSS *@
    @await RenderSectionAsync("Styles", false)
</head>

<body>
    <header>
        @await Html.PartialAsync("_Navbar")
    </header>
    <main>@RenderBody()</main>

    @await RenderSectionAsync("Scripts", false)
</body>

</html>